!!! transitional
html(lang='en', xmlns='http://www.w3.org/1999/xhtml')
	head
		title= title
		link(rel='stylesheet', href = '/themes/'+theme+'/theme.css')
		link(rel='stylesheet', href = '/css/styles.css')
		link(href='http://fonts.googleapis.com/css?family=Architects+Daughter:regular', rel='stylesheet', type='text/css')
		meta(content='text/html; charset=utf-8', http-equiv='Content-Type')
		script(src='/js/socket.io.min.js')
		script(src='/js/analytics.js')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js')
		script(src='/js/min/app.js')
		script(src='/flex/AC_OETags.js')
			
			
	body	
		#topbar
			#topbar2 
				a(class="mainLink", href="/") LIVE SHOWDOWN
				a(href="#howItWorks") How It Works
				a(href="#leaderBoard") Hall of Fame				
				#stats		
		#warning(style="display:none")
			span#warnText
			a(class="closeX", href="#", onClick="$('#warning').fadeOut('slow')") [X]
		#announcement(style="display:none")
			span#announceText
			a(class="closeX", href="#", onClick="$('#announcement').fadeOut('slow')") [X]
		#main_container
			#content
				#header_container.homepage
				#logo
					span Pick One
					//span !{title}
				!{body}
		#footer_container
			#footer
				hr
				#howItWorks
					h2 How It Works
					p Majority vote wins and stays to battle the next person in the queue. If you have a webcam, you're already in line to play!
				hr
				#leaderBoard(style="display:none")
					h2 Hall of Fame
					ul#leaders
				
				
				#footerText(style="color:#ccc;text-align:center") 
					a(href="http://twitter.com/liveshowdown", target="_blank") Contact Us
					!{footer}