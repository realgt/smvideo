html(lang='en', xmlns='http://www.w3.org/1999/xhtml')
	head
		title= title
		link(rel='stylesheet', href = '/themes/'+theme+'/theme.css')
		link(rel='stylesheet', href = '/css/styles.css')
		link(href='http://fonts.googleapis.com/css?family=Slackey:regular', rel='stylesheet', type='text/css')
		meta(content='text/html; charset=utf-8', http-equiv='Content-Type')	
		script(type='text/javascript') 
			var detectedLang = '#{lang}';	
		script(src='/flex/AC_OETags.js')
		script(src='/js/socket.io.min.js')
		script(src='/js/analytics.js')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.5.2/jquery.min.js')
		script(src='/js/jquery.i18n.properties-min.js')
		script(src='/js/min/app.js')	
			
	body	
		#topbar
			#topbar2 
				a(class="mainLink", href="/") LIVE SHOWDOWN
				a(class='howItWorksLabel', href="#howItWorks")
				a(class='leaderBoardLabel', href="#leaderBoard") 
				#stats
					span#statsLabel
					span#statsCount
		#warning(style="display:none")
			span#warnText
			a(class="closeX", href="#", onClick="$('#warning').fadeOut('slow')") [X]
		#announcement(style="display:none")
			span#announceText
			a(class="closeX", href="#", onClick="$('#announcement').fadeOut('slow')") [X]
		#main_container
			#content
				#header_container.homepage
				#logo
					span#pickOne
					//span !{title}
				!{body}
		#footer_container
			#footer
				hr
				#howItWorks
					h2(class='howItWorksLabel')
					p#howItWorksText
				hr
				#leaderBoard(style="display:none")
					h2(class='leaderBoardLabel')
					ul#leaders
				
				
				#footerText(style="color:#ccc;text-align:center") 
					a(id='contactUsLink',href="http://twitter.com/liveshowdown", target="_blank")
					!{footer}